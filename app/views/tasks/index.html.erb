<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task.id) %></h2>
  <p><%= link_to "Edit", edit_task_path(task) %></p>
  <p><%= link_to "Delete Task", delete_task_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></p>
<% end %>

<%= link_to "Create Task", tasks_new_path %>
